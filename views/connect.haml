%form.form-horizontal#connectForm{:method => "POST", :action => "/"}
	.control-group
		%label.control-label
			Mongo string connection:
		.controls
			%input.input-block-level{:type => "text", :name => "connectionString", :placeholder => "<mongodb://username:pass@host:port/db>"}
	%button.btn.btn-primary.btn-large
		Connect to database!